<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/header_root_4comics"
    android:background="@mipmap/haikei" >

    <RelativeLayout style="@style/header_relative_4comics" >

        <ImageView
            android:id="@+id/header_bar_4comics"
            style="@style/header_bar_4comics"
            android:layout_width="fill_parent" />

        <Button
            android:id="@+id/header_back_bt"
            style="@style/header_back_button_4comics"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/ninjin_button"
            android:textColor="#ffffff"
            android:text="もどる" />

        <TextView
            android:id="@+id/theme"
            style="@style/header_title_4comics"
            android:text="４コマ漫画目覚まし" />
    </RelativeLayout>

    <android.support.v4.app.FragmentTabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        tools:context=".MainActivity" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/realtabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical" />

            <FrameLayout
                android:id="@+id/mediation"
                android:layout_width="fill_parent"
                android:layout_height="100px"
                android:background="@mipmap/bannar" >
            </FrameLayout>
        </LinearLayout>
    </android.support.v4.app.FragmentTabHost>

</LinearLayout><!-- From: file:/Users/nakazatokai/Documents/workspace(AndroidStudio)/Four_Comics_Alarm/res/layout/activity_main.xml -->